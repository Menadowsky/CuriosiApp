<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.menas.curiosiapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_curisiapp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_curisiapp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Registro"
            android:label="@string/title_activity_registro" />
        />
        <activity
            android:name=".Contenido"
            android:label="Contenido" />
        <activity
            android:name=".QuizActivity"
            android:label="Preguntas"
            />
        <activity
            android:name=".Puntaje"
            android:label="Puntaje"
            ></activity>
    </application>

</manifest>